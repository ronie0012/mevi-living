# Production Environment Variables Template
# Copy this to your deployment platform's environment variables section

# Database (Production)
DATABASE_URL="your-production-database-url"
DATABASE_AUTH_TOKEN="your-production-db-auth-token"

# App URL (Production)
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Security (Generate strong secrets for production)
BETTER_AUTH_SECRET="your-production-better-auth-secret-64-chars-long"
JWT_SECRET="your-production-jwt-secret-64-chars-long"

# Environment
NODE_ENV="production"
ENABLE_EMAIL_VERIFICATION="true"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# OpenAI API Key
OPENAI_API_KEY="your-production-openai-api-key"

# Additional secrets that might be needed
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"